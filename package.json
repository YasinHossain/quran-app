{
  "name": "quran-app-v1",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "rm -f public/sw.js && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "check": "npm run format -- --check && npm run lint && npm run type-check && npm test",
    "generate:tokens": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/generate-tokens.ts",
    "generate-feature": "ts-node scripts/generateFeature.ts",
    "audit-styles": "npm run audit:theme && npm run audit:colors && npm run audit:classes",
    "audit:theme": "grep -r \"theme ===\" app/ && exit 1 || echo \"✅ No theme conditionals found\"",
    "audit:colors": "grep -r \"#[0-9a-fA-F]\" app/ --include=\"*.tsx\" --include=\"*.ts\" && exit 1 || echo \"✅ No hardcoded colors found\"",
    "audit:classes": "grep -r \"gray-\\|slate-\\|zinc-\" app/ --include=\"*.tsx\" && exit 1 || echo \"✅ No raw utility classes found\"",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.4.0",
    "@radix-ui/react-popover": "latest",
    "@radix-ui/react-slider": "latest",
    "@radix-ui/react-tooltip": "latest",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.12",
    "i18next": "^25.3.2",
    "lucide-react": "^0.539.0",
    "next": "^15.4.6",
    "next-i18next": "^15.4.2",
    "next-pwa": "^5.6.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-window": "^1.8.10",
    "swr": "^2.3.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "cross-fetch": "^4.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20",
    "@storybook/nextjs": "^8.4.3",
    "@storybook/addon-essentials": "^8.4.3",
    "@storybook/addon-themes": "^8.4.3",
    "storybook": "^8.4.3"
  }
}
