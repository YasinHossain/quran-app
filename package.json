{
  "name": "quran-app-v1",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "node node_modules/next/dist/bin/next dev --turbopack",
    "dev:lan": "node node_modules/next/dist/bin/next dev --turbopack -H 0.0.0.0",
    "dev:webpack": "node node_modules/next/dist/bin/next dev",
    "dev:no-turbo": "node node_modules/next/dist/bin/next dev",
    "dev:debug": "node --inspect node_modules/next/dist/bin/next dev --turbopack",
    "build": "node -e \"const fs=require('fs');const file='public/sw.js';if(fs.existsSync(file)){fs.rmSync(file);}\" && node node_modules/next/dist/bin/next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "node node_modules/next/dist/bin/next start",
    "lint": "eslint app src lib tests --cache --cache-location .eslintcache",
    "lint:fix": "eslint app src lib tests --cache --cache-location .eslintcache --fix",
    "lint:ci": "eslint app src lib tests --max-warnings=0 && npm run lint:cycles",
    "lint:cycles": "eslint src --rule 'import/no-cycle:error' --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=50%",
    "test:architecture": "jest --testPathPattern=architecture",
    "test:responsive": "jest --testPathPattern=responsive",
    "test:unit": "jest tests/unit --testEnvironment=node --maxWorkers=75%",
    "test:integration": "jest tests/integration --testEnvironment=node --maxWorkers=50%",
    "test:ui": "jest app/.*test --testEnvironment=jsdom --maxWorkers=50%",
    "test:critical": "npm run test:unit && npm run test:ui -- --testPathPattern='(Header|Navigation|Player|Bookmark)'",
    "test:accessibility": "jest tests/accessibility --testEnvironment=jsdom",
    "test:nightly": "npm run test:unit && npm run test:integration && npm run test:ui",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "check": "npm run format && npm run lint:ci && npm run type-check && npm run test",
    "clean": "rm -rf .next out coverage",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:test": "test-runner",
    "storybook:test:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run storybook:build && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && npm run storybook:test\"",
    "preview": "npm run build && npm start",
    "size-limit": "npx size-limit",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "rg": "node tools/scripts/rg.mjs",
    "search": "npm run -s rg --",
    "search:todos": "npm run -s rg -- \"(TODO|FIXME|HACK|BUG|NOTE)[:\\s]\" --glob \"*.{ts,tsx,js,jsx}\"",
    "search:components": "npm run -s rg -- \"(export\\s+(default\\s+)?function|const\\s+\\w+\\s*=.*=>|function\\s+\\w+)\" --glob \"*.{tsx,jsx}\" -A 1",
    "search:hooks": "npm run -s rg -- \"(export\\s+)?(function\\s+use\\w+|const\\s+use\\w+\\s*=)\" --glob \"*.{ts,tsx}\"",
    "search:types": "npm run -s rg -- \"(interface\\s+\\w+|type\\s+\\w+\\s*=|enum\\s+\\w+)\" --glob \"*.{ts,tsx}\"",
    "search:api": "npm run -s rg -- \"(api/|fetch\\(|axios\\.|useSWR)\" --glob \"*.{ts,tsx}\"",
    "search:context": "npm run -s rg -- \"(createContext|useContext|Provider)\" --glob \"*.{ts,tsx}\"",
    "search:styles": "npm run -s rg -- \"(className=|tw\\`|cn\\(|tailwind)\" --glob \"*.{tsx,jsx}\"",
    "audit:size": "find app src lib types -name '*.tsx' -o -name '*.ts' | grep -v test | xargs wc -l | sort -rn | head -20",
    "audit:complexity": "npx eslint . --format=json | npx eslint-complexity-report",
    "refactor:check": "npx eslint . --ext .ts,.tsx --max-warnings=0",
    "clean:unused": "npx knip --fix",
    "analyze": "ANALYZE=true npm run build",
    "gemini": "gemini"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.4.0",
    "@radix-ui/react-popover": "latest",
    "@radix-ui/react-slider": "latest",
    "@radix-ui/react-tooltip": "latest",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tanstack/react-virtual": "^3.13.12",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "i18next": "^25.3.2",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.548.0",
    "next": "^15.5.0",
    "next-pwa": "^5.6.0",
    "react": "19.1.1",
    "react-dom": "19.2.0",
    "react-i18next": "^15.7.2",
    "react-window": "^1.8.10",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9",
    "@playwright/test": "^1.55.0",
    "@size-limit/preset-app": "^11.2.0",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-essentials": "^8.4.3",
    "@storybook/addon-themes": "^8.4.3",
    "@storybook/nextjs": "^8.4.3",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "http-server": "^14.1.1",
    "jest": "^30.0.5",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "knip": "^5.63.0",
    "msw": "^2.11.2",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "storybook": "^8.4.3",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.4",
    "whatwg-fetch": "^3.6.20"
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^15.5.3"
  },
  "size-limit": [
    {
      "name": "Surah Feature Bundle",
      "path": ".next/static/chunks/app/(features)/surah/**/*.js",
      "limit": "50 KB",
      "webpack": false
    },
    {
      "name": "Shared Components Bundle",
      "path": ".next/static/chunks/app/shared/**/*.js",
      "limit": "30 KB",
      "webpack": false
    },
    {
      "name": "Providers Bundle",
      "path": ".next/static/chunks/app/providers/**/*.js",
      "limit": "25 KB",
      "webpack": false
    },
    {
      "name": "Bookmarks Feature Bundle",
      "path": ".next/static/chunks/app/(features)/bookmarks/**/*.js",
      "limit": "45 KB",
      "webpack": false
    },
    {
      "name": "Tafsir Feature Bundle",
      "path": ".next/static/chunks/app/(features)/tafsir/**/*.js",
      "limit": "40 KB",
      "webpack": false
    },
    {
      "name": "Search Feature Bundle",
      "path": ".next/static/chunks/app/(features)/search/**/*.js",
      "limit": "35 KB",
      "webpack": false
    },
    {
      "name": "Main App Bundle",
      "path": ".next/static/chunks/main-*.js",
      "limit": "200 KB",
      "webpack": false
    }
  ],
  "volta": {
    "node": "20.19.5"
  }
}
