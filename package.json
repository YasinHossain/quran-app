{
  "name": "quran-app-v1",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:lan": "next dev --turbopack -H 0.0.0.0",
    "dev:webpack": "next dev",
    "dev:no-turbo": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "rm -f public/sw.js && next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "check": "npm run format:check && npm run lint && npm run type-check && npm run test:ci",
    "check:fix": "npm run format && npm run lint:fix && npm run type-check",
    "clean": "rm -rf .next out coverage",
    "reset": "npm run clean && rm -rf node_modules package-lock.json && npm install",
    "generate:tokens": "ts-node --compiler-options '{\"module\":\"commonjs\"}' tools/scripts/generate-tokens.ts",
    "generate-feature": "ts-node tools/scripts/generateFeature.ts",
    "generate-component": "node tools/scripts/generate-component.mjs",
    "migrate-tokens": "node tools/scripts/migrate-tokens.mjs",
    "validate:tokens": "ts-node --compiler-options '{\"module\":\"commonjs\"}' tools/scripts/validate-tokens.ts",
    "audit-styles": "npm run audit:theme && npm run audit:colors && npm run audit:classes",
    "audit:theme": "npm run -s rg -- \"theme ===\" app && exit 1 || echo \"✅ No theme conditionals found\"",
    "audit:colors": "npm run -s rg -- \"#[0-9a-fA-F]\" app --glob \"*.{ts,tsx}\" && exit 1 || echo \"✅ No hardcoded colors found\"",
    "audit:classes": "npm run -s rg -- \"(gray-|slate-|zinc-)\" app --glob \"*.tsx\" && exit 1 || echo \"✅ No raw utility classes found\"",
    "audit:deps": "npm audit --audit-level=moderate",
    "audit:deps:fix": "npm audit fix",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "preview": "npm run build && npm start",
    "size-limit": "npx size-limit",
    "lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "rg": "node tools/scripts/rg.js",
    "search": "npm run -s rg --",
    "search:todos": "npm run -s rg -- \"(TODO|FIXME|HACK|BUG|NOTE)[:\\s]\" --glob \"*.{ts,tsx,js,jsx}\"",
    "search:components": "npm run -s rg -- \"(export\\s+(default\\s+)?function|const\\s+\\w+\\s*=.*=>|function\\s+\\w+)\" --glob \"*.{tsx,jsx}\" -A 1",
    "search:hooks": "npm run -s rg -- \"(export\\s+)?(function\\s+use\\w+|const\\s+use\\w+\\s*=)\" --glob \"*.{ts,tsx}\"",
    "search:types": "npm run -s rg -- \"(interface\\s+\\w+|type\\s+\\w+\\s*=|enum\\s+\\w+)\" --glob \"*.{ts,tsx}\"",
    "search:api": "npm run -s rg -- \"(api/|fetch\\(|axios\\.|useSWR)\" --glob \"*.{ts,tsx}\"",
    "search:context": "npm run -s rg -- \"(createContext|useContext|Provider)\" --glob \"*.{ts,tsx}\"",
    "search:styles": "npm run -s rg -- \"(className=|tw\\`|cn\\(|tailwind)\" --glob \"*.{tsx,jsx}\"",
    "audit:size": "find app src lib types -name '*.tsx' -o -name '*.ts' | grep -v test | xargs wc -l | sort -rn | head -20",
    "audit:complexity": "npx eslint . --format=json | npx eslint-complexity-report",
    "refactor:check": "npx eslint . --ext .ts,.tsx --max-warnings=0",
    "clean:unused": "npx knip --fix",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.4.0",
    "@radix-ui/react-popover": "latest",
    "@radix-ui/react-slider": "latest",
    "@radix-ui/react-tooltip": "latest",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.12",
    "i18next": "^25.3.2",
    "inversify": "^7.9.1",
    "lucide-react": "^0.541.0",
    "next": "^15.5.0",
    "next-pwa": "^5.6.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "^15.7.2",
    "react-icons": "^5.5.0",
    "react-window": "^1.8.10",
    "reflect-metadata": "^0.2.2",
    "swr": "^2.3.4",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-app": "^11.2.0",
    "@storybook/addon-essentials": "^8.4.3",
    "@storybook/addon-themes": "^8.4.3",
    "@storybook/nextjs": "^8.4.3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "cross-fetch": "^4.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "knip": "^5.63.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "storybook": "^8.4.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "viewport-units-buggyfill": "^0.6.2",
    "vscode-ripgrep": "^1.13.2",
    "whatwg-fetch": "^3.6.20"
  },
  "size-limit": [
    {
      "path": ".next/static/chunks/app/(features)/surah/**/*.js",
      "limit": "50 KB"
    },
    {
      "path": ".next/static/chunks/app/shared/**/*.js",
      "limit": "30 KB"
    },
    {
      "path": ".next/static/chunks/app/providers/**/*.js",
      "limit": "25 KB"
    }
  ]
}
